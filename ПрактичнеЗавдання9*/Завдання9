#include <stdio.h>
#include <stdlib.h>

// Функція для обчислення мінімальної кількості кроків
int minSteps(int x, int y) {
    // Відстань між x та y
    int distance = y - x;

    // Знаходимо найбільше ціле число k, для якого k * (k + 1) / 2 <= distance
    int k = 0;
    while ((k * (k + 1) / 2) < distance) {
        k++;
    }

    // Якщо відстань дорівнює кількості кроків (к = 0), або відстань менша за 3 (к = 1),
    // то мінімальна кількість кроків дорівнює відстані
    if (k <= 1) {
        return distance;
    }

    // В іншому випадку розглядаємо два сценарії:
    // 1. Коли відстань є точним квадратом числа k: мінімальна кількість кроків дорівнює 2 * k - 1
    // 2. Коли відстань не є точним квадратом числа k: мінімальна кількість кроків дорівнює 2 * k
    if ((k * (k + 1) / 2) == distance) {
        return 2 * k - 1;
    } else {
        return 2 * k;
    }
}

int main() {
    int x, y;

    // Зчитування значень x та y
    printf("Введіть значення x: ");
    scanf("%d", &x);
    printf("Введіть значення y: ");
    scanf("%d", &y);

    // Обчислення мінімальної кількості кроків
    int steps = minSteps(x, y);

    // Виведення результату
    printf("Мінімальна кількість кроків: %d\n", steps);

    return 0;
}
